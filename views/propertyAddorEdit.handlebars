<title>{{title}}</title>

<h3>{{title}}</h3>
<form action="/propertyRegistration" method="POST">
    <input type="hidden" name="_id" value="{{property._id}}">
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" placeholder="Address of the Property" value="{{property.address}}">
        <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
    </div>
    <div class="form-group">
        <label>City</label>
        <input type="text" class="form-control" name="city" placeholder="City" value="{{property.city}}">
        <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
    </div>
    <div class="form-group">
        <label>State</label>
        <input type="text" class="form-control" name="state" placeholder="State" value="{{property.state}}">
        <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
    </div>
    <div class="form-group">
        <label>Zip Code</label>
        <input type="text" class="form-control" name="zipcode" placeholder="Zip Code" value="{{property.zipCode}}">
        <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
    </div>
    <div class="form-group col-md-6">
        <label>Beds</label>
        <input type="text" class="form-control" name="beds" placeholder="Beds" value="{{property.beds}}">
        <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
    </div>
    <div class="form-group col-md-6">
        <label>Baths</label>
        <input type="text" class="form-control" name="baths" placeholder="Baths" value="{{property.baths}}">
        <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
    </div>
    <div class="form-group col-md-6">
        <label>Deposit</label>
        <input type="number" class="form-control" name="deposit" placeholder="Deposit" value="{{property.deposit}}">
        <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
    </div>
    <div class="form-group col-md-6">
        <label>Rent</label>
        <input type="text" class="form-control" name="rent" placeholder="Rent" value="{{property.rent}}">
        <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
    </div>
    <div class="form-group">
        <label>Ammenities</label>
        <input type="text" class="form-control" name="ammenities" placeholder="Ammenities" value="{{property.ammenities}}">
        <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
        <a class="btn btn-secondary" href="/manageRentals"> View All</a>
    </div>

</form>

