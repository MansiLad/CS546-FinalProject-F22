<main>
        <div class="row">
            <div class="col-md-6 offset-md-3" style="background-color: #fff;margin-top: 25px;padding:20px;">
                        <div class="container">
                                <div class="header">
                                        <h3>{{title}}</h3>
                                </div>
                                <form id="userreg" method="POST" action="/user/userRegistration" class="text-center p-3 m-3">
                                        <div class="form-control">
                                                <label> First Name: </label><br><br>
                                                <input type="text" id="firstName" name="firstName" required> 
                                                <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
                                        </div>
                                        <br><br><br>
                                        <div class="form-control">
                                                <label for="lastName"> Last Name: </label><br><br>
                                                <input type="text" id="lastName" name="lastName" required>
                                                <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
                                        </div>
                                        <br><br><br>
                                        <div class="form-control">
                                                <label for="gender" id="gender">Gender: </label><br><br>
                                                <label for="male" class="radio-inline"><input type="radio" name="gender" value="m" id="male">Male</label>&ensp;&ensp;
                                                <label for="female" class="radio-inline"><input type="radio" name="gender" value="f" id="female">Female</label>&ensp;&ensp;
                                                <label for="other" class="radio-inline"><input type="radio" name="gender" value="o" id="other">Others</label>
                                                <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
                                        </div>
                                        <br><br><br>
                                        <div class="form-control">
                                                <label for="email"> Email: </label><br><br>
                                                <input type="email" id="email" name="email" required> 
                                                <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
                                        </div>
                                        <br><br><br>
                                        <div class="form-control">
                                                <label for="city"> City: </label><br><br>
                                                <input type="text" id="city" name="city" required> 
                                                <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
                                        </div>
                                        <br><br><br>
                                        <div class="form-control">
                                                <label for="state"> State: </label><br><br>
                                                <input type="text" id="state" name="state" required> 
                                                <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
                                        </div>
                                        <br><br><br>
                                        <div class="form-control">
                                                <label for="phoneNumber"> Phone Number: </label><br><br>
                                                <input type="tel" id="phoneNumber" name="phoneNumber" required> 
                                                <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
                                        </div>
                                        <br><br><br>
                                        <div class="form-control">
                                                <label for="type" id="type"> Type of User:</label> <br><br>
                                                <label for="type-user" class="radio-inline"><input type="radio" name="type" value="buyer" id="buyer">User</label>&ensp;&ensp;
                                                <label for="type-owner" class="radio-inline"><input type="radio" name="type" value="seller" id="seller">Owner</label>
                                        
                                                <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
                                        </div>
                                        <br><br><br>
                                        <div class="form-control">
                                                <label for="password"> Password: </label><br><br>
                                                <input type="password" id="password" name="password" required> 
                                                <i class="fas fa-check-circle"></i> <i class="fas fa-exclamation-circle"></i>   <small>Error message</small>
                                                <p>Password should contain atleast: 1 uppercase, 1 special character, 1 numeric value and no spaces</p>
                                        </div>
                                        <br><br><br><br><br><br>
                                        <button type="submit" class="btn btn-default" id="login-button">Register</button>

                                        <script src="../public/js/userRegValidation.js"></script>
                                </form>
                        </div>
                </div>
        </div>
    </main>

