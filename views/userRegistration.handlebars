<title>{{title}}</title>
<p>
    Registration form 
</p>
{{#if error}}
<p>{{error}}</p>
{{/if}}
    <form id="regform" method="POST" action="/user/userRegistration">
        <h1>Registration Form</h1>
        <br>
        <label for="firstName"> First Name </label>
                <input type="text" class="form-control" id="firstName" name="firstName" value="firstname" placeholder="First Name"> 
                <br>
                <br>
        <label for="lastName"> Last Name </label>
                <input type="text" class="form-control" id="lastName" name="lastName" value="lastName" placeholder="Last Name"> 
                <br>
                <br>
        <label for="gender"> Gender </label>
                <label for="male" class="radio-inline"><input type="radio" name="gender" value="m" id="male">Male</label>
                <label for="female" class="radio-inline"><input type="radio" name="gender" value="f" id="female">Female</label>
                <label for="other" class="radio-inline"><input type="radio" name="gender" value="o" id="other">Others</label>
                <br>
                <br>
                {{!-- user type dropdown -> change in data --}}
        <label for="email"> Email </label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email"> 
                <br>
                <br>
        {{!-- <label for="city"> City </label>
                <input type="text" class="form-control" id="city" name="city"> 
                <br>
                <br>
        <label for="state"> State </label>
                <input type="text" class="form-control" id="state" name="state"> 
                <br>
                <br> --}}
        <label for="phoneNumber"> Phone Number </label>
                <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" value="phoneNumber" placeholder="Phone Number"> 
                <br>
                <br>
        <label for="type"> Type of User </label>
                <label for="type-user" class="radio-inline"><input type="radio" name="type" value="buyer" id="male">User</label>
                <label for="type-owner" class="radio-inline"><input type="radio" name="type" value="seller" id="female">Owner</label>
                <br>
                <br>
        <label for="password"> Password </label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password"> 
                <br>
                <br>
        <button type="submit"> Submit </button>
    </form> 