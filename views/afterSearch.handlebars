<title>{{title}}</title>
<main class="forAfterSearch">
  <div class="top_heading">
    <div class="col-md-6 offset-md-3" style="background-color: #fff; margin-top: 0px; padding:10px;">
      <div class="second_nav">
        <h2 class="h2_class"> Property Details</h2>
      </div>
    </div>
  </div>
  <div>
    <nav class="left_nav">
      <div>
        <h3 class="text_centered">Filters</h3>
      </div>
      <form method="post" action="/filters">
        <div>
          <label class="labels" for="select_SortBy">Sort By:</label>
          <select class="dropdown_menu " aria-label=".form-select-lg example" name="select_sortBy" id="select_sortBy">
            <option selected value="Default">Sort By: Default</option>
            <option value="LowtoHigh">Price Low to High</option>
            <option value="HightoLow">Price High to Low</option>
                          
          </select>
        </div>
        <div>
          <label class="labels" for="inlineFormCustomSelect">Beds: </label>
          <select class="dropdown_menu " id="inlineFormCustomSelect" name="beds">
          <option selected value="Any">Any</option>
            <option value="1">1</option>
            <option value="1.5">1.5</option>
            <option value="2">2</option>
            <option value="2.5">2.5</option>
            <option value="3">3</option>
          </select>
        </div>
        <div>
          <label class="labels" for="inlineFormCustomSelect_2">Baths: </label>
            <select class="dropdown_menu" id="inlineFormCustomSelect_2" name="baths">
              <option value="Any" selected>Any</option>
              <option value="1">1</option>
              <option value="1.5">1.5</option>
              <option value="2">2</option>
              <option value="2.5">2.5</option>
              <option value="3">3</option>
            </select>
        </div>
        <div>
                <br><br>
                <h4 class="h4">Price Range(in $)</h4>
                <div class="form-group range_container">
                  <div class="sliders_control">
                      <input id="fromSlider" type="range" value="0" min="0" max="10000">
                      <input id="toSlider" type="range" value="10000" min="0" max="10000">
                  </div>
                  <div class="form_control">
                      <div class="form_control_container">
                          <div class="form_control_container__time">Minimum</div>
                          <input class="form_control_container__time__input" type="number" name= "minimum" id="fromInput" value="0" min="0" max="10000">
                      </div>
                      <div class="form_control_container">
                          <div class="form_control_container__time">Maximum</div>
                          <input class="form_control_container__time__input" type="number" name="maximum" id="toInput" value="10000" min="0" max="10000">
                      </div>
                  </div>
                </div>
              </div>
              <div>
                <button class="form-group col-5 h3 rounded m-1 p-1 btn btn-primary"> 
                  <span class="search_clear">Search</span>
                </button>
              </div>
            </form>
            <a href="/logout">Logout</a>
    <a href="/favourites">Favourites</a>
    <br>
    <br>
    <br>
    <br>
    <br><br><br><br><br><br>s
    
          </nav>
        </div>

        <div class="right-values">

         <br><br>
              {{#each result}}
              <div class="divider_block">
                <div class="col-9 box_display">
                  <div class="row">
                    <div class="col-12">
                    <br><br>
                      <a href="/propdetails/{{_id}}"><span class="h2">{{address}},{{city}}, {{state}}, {{zipCode}}</span></a>
                    <br>
                      <h4 class="h4">Beds : {{beds}}   Baths : {{baths}}</h4>
                      <h4 class="h4" id="rent">Rent : {{rent}}   </h4>
                      <h4 class="h4">Deposit : {{deposit}}</h4>
                      <h4 class="h4">Amenities : {{amenities}}</h4>
                      <div class="favResult"> 
                          <form class="addtofav" method="POST" action="/favourites">
                              <input type="hidden" name="propertyId" value="{{this._id}}"> 
                              <div>
                                <button type="submit"  class="btn" id="Addtofavourites">Add to favourites</button>
                              </div>
                          </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <br><br>
              {{/each}}
            
        </div>
     
        <script src="/public/script1.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

        <a href="/user/logout">Logout</a>
  </main>